# =======================================================
# ERP系统安全环境变量配置
# =======================================================
# 重要：请复制此文件为 .env 并填入实际值
# 切勿将 .env 文件提交到版本控制系统！

# =======================================================
# 数据库配置
# =======================================================
DB_HOST=localhost
DB_USER=admin
DB_PASSWORD=your_secure_password_here
DB_NAME=erp_db
DB_PORT=5432

# =======================================================
# 服务器配置
# =======================================================
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# =======================================================
# JWT 安全配置
# =======================================================
# 使用强密码生成器生成至少32位随机字符串
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_token_secret_key_here
JWT_REFRESH_EXPIRES_IN=7d

# =======================================================
# 安全配置
# =======================================================
# 密码加密盐轮数（越高越安全，但性能越低）
BCRYPT_ROUNDS=12
# 会话密钥
SESSION_SECRET=your_session_secret_key_here
# API 速率限制
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =======================================================
# CORS 配置
# =======================================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# =======================================================
# 日志配置
# =======================================================
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# =======================================================
# 邮件配置（如果需要）
# =======================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# =======================================================
# 第三方服务配置
# =======================================================
# 支付网关（示例）
PAYMENT_GATEWAY_API_KEY=your_payment_api_key
PAYMENT_GATEWAY_SECRET=your_payment_secret

# 文件存储（示例）
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_bucket_name

# =======================================================
# 监控和调试
# =======================================================
# 仅在开发环境启用
DEBUG=false
ENABLE_QUERY_LOGGING=false
ENABLE_REQUEST_LOGGING=true

# =======================================================
# 安全头部配置
# =======================================================
# 内容安全策略
CSP_DIRECTIVES="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';"
# 安全头部
SECURITY_HEADERS_ENABLED=true
