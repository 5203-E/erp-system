{
  "name": "erp-system",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:orders": "jest --testPathPattern=orders.test.js",
    "test:backend": "jest",
    "test:frontend": "cd client && npm test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:install": "playwright install",
    "test:performance": "jest tests/performance/",
    "test:integration": "jest tests/integration/",
    "test:all": "npm run test:backend && npm run test:frontend && npm run test:e2e && npm run test:integration && npm run test:performance",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "code-quality": "npm run lint && npm run format:check",
    "db:init": "node database/init.js init",
    "db:reset": "node database/init.js reset",
    "db:sync": "node -e \"import('./database/init.js').then(m => m.initializeDatabase())\"",
    "migrate:test": "node -e \"require('./config/database').sync({force: true})\"",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "echo 'Backend build completed'",
    "build:frontend": "cd client && npm run build",
    "ci:setup": "npm ci && cd client && npm ci",
    "ci:test": "npm run test:all",
    "ci:build": "npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "playwright": "^1.40.0",
    "prettier": "^3.6.2",
    "supertest": "^7.0.0"
  }

}
